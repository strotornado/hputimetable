<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_white"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_message_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_20_message"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:includeFontPadding="false"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_message_time"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/item_message_isread"
            android:text="[设为已读]"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_blue2"
            android:textSize="15sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_content"
        android:lineSpacingExtra="2dp"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/item_station_layout"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center_vertical"
        android:background="@color/app_gray_f0f0f0"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/id_layout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_25dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/item_message_station_img"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_message_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/item_url_layout"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/app_gray_f0f0f0"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_link"/>

        <TextView
            android:id="@+id/item_message_url_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_blue2"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>